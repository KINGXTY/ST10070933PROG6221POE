<Window x:Class="ST10070933PROG6221POE.AddIngredientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Ingredient" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:" />
            <TextBox Name="IngredientNameTextBox" Margin="0,5" />

            <TextBlock Text="Quantity:" />
            <TextBox Name="IngredientQuantityTextBox" Margin="0,5" />

            <TextBlock Text="Unit:" />
            <TextBox Name="IngredientUnitTextBox" Margin="0,5" />

            <TextBlock Text="Calories:" />
            <TextBox Name="IngredientCaloriesTextBox" Margin="0,5" />

            <TextBlock Text="Food Group:" />
            <TextBox Name="IngredientFoodGroupTextBox" Margin="0,5" />

            <Button Content="Add" Click="AddIngredientButton_Click" Margin="0,10" />
        </StackPanel>
    </Grid>
</Window>